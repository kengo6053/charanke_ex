<div class="container">
    <div class="menu-container">
        ようこそ！ちゃらんけ専用サイトへ！<br>
        <%= link_to "トップ", "/tops/index" %><br>
        <%= link_to '練習メニュー記録', :controller => "practices", :action => "index" %><br>
        <%= link_to '大会結果', :controller => "results", :action => "index" %><br>
        <%= link_to '部費管理', :controller => "fee_admin", :action => "index" %><br>
        <%= link_to 'アクアフリー予約', :controller => "reservations", :action => "index" %><br>
        <%= link_to '各種情報', :controller => "informations", :action => "index" %><br>
    </div>
    
    <div class="memo-practices-container">
        <h3>練習の記録</h3>
        <%= form_for @practice do |f| %>
        <%= f.date_field :date %>
    
        <div class="field">
            <%= f.label :種目 %>
            <%= f.select :event, ['スイム', 'バイク', 'ラン'], {include_blank: '---'} %>
        </div>

        <div class="field">
            <%= f.label :その他記載事項 %>
            <%= f.text_field :body, :size => 140 %>
        </div>

        <div class="field">
            <%= f.label :画像1 %>
            <%= f.file_field :image %>
        </div>

        <div class="field">
            <%= f.label :画像2 %>
            <%= f.file_field :image1 %>
        </div>

        <div class="field">
            <%= f.label :画像3 %>
            <%= f.file_field :image2 %>
        </div>

        <div class="field">
            <%= f.label :画像4 %>
            <%= f.file_field :image3 %>
        </div>

        <div class="field">
            <%= f.label :画像5 %>
            <%= f.file_field :image4 %>
        </div>

        <%= f.submit "記録する" %><br>
        <% end %>
        <%= link_to "練習記録の一覧に戻る", "/practices/index" %>
    </div>
</div>